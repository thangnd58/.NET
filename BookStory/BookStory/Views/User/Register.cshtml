@{
    ViewBag.Title = "Register";
    Layout = "_UserLayout";
}
<div class="signup-content">
    <div class="signup-form">
        <h2 class="form-title">Đăng ký</h2>
        <form method="POST" action="/User/Register" class="register-form" id="register-form">
            <div class="form-group">
                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                <input type="text" name="name" id="name" placeholder="Tên của bạn" required />
            </div>
            <div class="form-group">
                <label for="email"><i class="zmdi zmdi-email"></i></label>
                <input type="email" name="email" id="email" placeholder="Email" required />
            </div>
            <div class="form-group">
                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                <input type="password" name="pass" id="pass" placeholder="Mật khẩu" required />
            </div>
            <div class="form-group">
                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                <input type="password" name="re_pass" id="re_pass" placeholder="Nhập lại mật khẩu" required />
            </div>
            <div style="color: red">
                @ViewBag.Message
            </div>
            <div class="form-group form-button">
                <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng ký" />
            </div>
        </form>
    </div>
    <div class="signup-image">
        <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
        <a href="/User/Login" class="signup-image-link">I am already member</a>
    </div>
</div>
