    <!-- Page specific script -->
    <script>
          $(function () {
          $("#example1").DataTable({
            "buttons": ["colvis"],
            "paging": false,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "responsive": true,
            "order": [[0, "desc"]],
          });
          //.buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
          });


        //Add story
        $(document).ready(function(){
            $('#add-story').click(function(){
                $.ajax({
                    url: '/Admin/AddStory/',
                    type: 'POST',
                    data: $('#form-add-story').serialize(),
                    success: function() {
                        alert("Add Story Successful")
                        location.reload()
                    }
                });
            });
        });

        //Add Author
          $(document).ready(function(){
            $('#add-author').click(function(){
                $.ajax({
                    url: '/Admin/AddAuthor/',
                    type: 'POST',
                    data: $('#form-add-author').serialize(),
                    success: function() {
                        alert("Add Author Successful")
                        location.reload()
                    }
                });
            });
        });

        //Add Category
          $(document).ready(function(){
            $('#add-category').click(function(){
                $.ajax({
                    url: '/Admin/AddCategory/',
                    type: 'POST',
                    data: $('#form-add-category').serialize(),
                    success: function() {
                        alert("Add Category Successful")
                        location.reload()
                    }
                });
            });
        });

        //Edit Story
          $(document).ready(function(){
            $('#edit-story').click(function(){
                $.ajax({
                    url: '/Admin/EditStory/',
                    type: 'POST',
                    data: $('#form-edit-story').serialize(),
                    success: function() {
                        alert("Edit Story Successful")
                        location.reload()
                    }
                });
            });
        });

        //Select2
        $('.select2').select2();
        // Summernote
        $('.summernote').summernote();

        //load data story for edit
        $(document).ready(function(){
            $('.storyinfo').click(function(){
                var storyid = $(this).data('id');
                $.ajax({
                    url: '/Admin/GetStory/',
                    type: 'GET',
                    data: {storyid : storyid},
                    success: function(response) {
                        $('#sid-edit').val(response.sid)
                        $('#name-edit').val(response.name)
                        $('#status-edit').val(response.status)
                        $('#source-edit').val(response.source)
                        $('#image-edit').val(response.image)
                        $('#keyword-edit').val(response.keyword)
                        $('#description-edit').text(response.description)
                        $('#author-edit').val(response.authorid).change()
                        $('#category-edit').val(response.listcid).change()
                    }
                });
                $('#modal-edit').modal('show');
            });
        });

        //load data chapter for update
        $(document).ready(function(){
            $('.chapterinfo').click(function(){
                var sid = $(this).data('id');
                $('#sid-chapter').val(sid);
                $.ajax({
                    url: '/Admin/GetChapter/',
                    type: 'GET',
                    data: {sid : sid},
                    success: function(response) {
                        $('#namechapter').val(response.name)
                        $('#chapternumber').val(response.chapnumber)
                    }
                });
                $('#modal-addchapter').modal('show');
            });
        });
    </script>
</body>

</html>